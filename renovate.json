{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "postUpdateOptions": [
    "pnpmDedupe"
  ],
  "extends": [
    "config:base",
    ":pinDigestsDisabled"
  ],
  "node": {
    "enabled": true
  },
  "packageRules": [
    {
      "description": "Auto-update pnpm package manager",
      "matchManagers": [
        "npm"
      ],
      "matchDepTypes": [
        "packageManager"
      ],
      "automerge": true,
      "commitMessagePrefix": "chore(deps):",
      "commitMessageTopic": "pnpm"
    },
    {
      "description": "Update Node.js engine version",
      "matchDepNames": [
        "node"
      ],
      "matchManagers": [
        "npm"
      ],
      "rangeStrategy": "bump",
      "automerge": false,
      "commitMessagePrefix": "chore(deps):",
      "commitMessageTopic": "Node.js engine"
    },
    {
      "description": "Group all non-major devDependencies updates together",
      "matchDepTypes": [
        "devDependencies"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "groupName": "devDependencies (non-major)",
      "automerge": false
    },
    {
      "description": "Group all non-major production dependencies updates together",
      "matchDepTypes": [
        "dependencies"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "groupName": "dependencies (non-major)",
      "automerge": false
    },
    {
      "description": "Keep major updates as separate PRs for careful review",
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false
    }
  ],
  "rangeStrategy": "bump"
}