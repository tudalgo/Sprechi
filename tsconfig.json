{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@db": ["db"],
      "@db/*": ["db/*"],
      "@utils/*": ["utils/*"],
      "@managers/*": ["managers/*"],
    }
  },
  "exclude": [
    "build",
    "node_modules",
    "drizzle.config.ts",
    "eslint.config.ts",
  ]
}