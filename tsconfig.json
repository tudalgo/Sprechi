{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@db": [
        "src/db"
      ],
      "@db/*": [
        "src/db/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@managers/*": [
        "src/managers/*"
      ],
      "@errors/*": [
        "src/errors/*"
      ],
      "@commands/*": [
        "src/commands/*"
      ],
      "@events/*": [
        "src/events/*"
      ],
      "@/*": [
        "src/*"
      ],
    }
  },
  "exclude": [
    "build",
    "node_modules",
    "drizzle.config.ts",
    "eslint.config.ts",
  ]
}